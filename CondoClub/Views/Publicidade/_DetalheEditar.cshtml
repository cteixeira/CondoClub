@using CondoClub.Web.Models;
@using CondoClub.Web.Controllers;

@model Publicidade

@using (Ajax.BeginForm("Gravar",
    new AjaxOptions
    {
        UpdateTargetId = Model.IdPublicidade.Value.ToString(),
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "AfterUpdate(data, " + Model.IdPublicidade.Value + ")"
    }))
{
    Html.RenderPartial("_Detalhe", Model);
}